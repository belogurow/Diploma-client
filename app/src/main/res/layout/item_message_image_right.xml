<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/chatRoom_myMessage"
        style="@style/marginCenterPosition"
        android:layout_gravity="end"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/item_message_constraint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/item_message_image_right_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>

            <TextView
                android:text="@string/test_textView"
                android:id="@+id/item_message_image_right_time"
                style="@style/ChatMessageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:visibility="visible"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>